---
import { Image } from "astro:assets";

import imgBanner1 from "@/assets/img/home/banner1.webp";
import imgBanner2 from "@/assets/img/home/banner2.webp";
import imgBanner3 from "@/assets/img/home/banner3.webp";
import isologo from "@/assets/svg/Isologo.svg";
---

<!-- Properties to resolve error when the parent is flexible  -->
<section class="w-full h-full max-h-[100vh] min-h-0 min-w-0">
  <swiper-container
    loop="true"
    effect="fade"
    autoplay-delay="2500"
    allow-touch-move="false"
    pagination="true"
    class="relative"
  >
    <swiper-slide>
      <Image
        class={"h-[40rem] lg:h-screen object-cover "}
        src={imgBanner1}
        alt={"banner img"}
      />
    </swiper-slide>
    <swiper-slide>
      <Image
        class={"h-[40rem] lg:h-screen object-cover "}
        src={imgBanner2}
        alt={"banner img"}
      />
    </swiper-slide>
    <swiper-slide>
      <Image
        class={"h-[40rem] lg:h-screen object-cover "}
        src={imgBanner3}
        alt={"banner img"}
      />
    </swiper-slide>

    <div
      class="absolute bg-grey-950 h-full w-full flex justify-center bg-opacity-30 z-10"
    >
      <Image src={isologo} alt="isologo" />
    </div>
  </swiper-container>
</section>

<style is:global>
  :root {
    --swiper-pagination-color: #c39c4c;
  }
</style>

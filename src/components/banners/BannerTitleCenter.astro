---
import { Image } from "astro:assets";

type Props = {
  title: string;
  subTitle: string;
  imgLeft: ImageMetadata;
  imgRight: ImageMetadata;
};

const { title, subTitle, imgLeft, imgRight } = Astro.props;
---

<section class="bg-accent-50 w-full pt-20 lg:pt-36 pb-10 flex justify-center">
  <div class="container flex justify-center gap-0 lg:gap-6 px-4 flex-wrap">
    <div class="w-1/4">
      <Image src={imgLeft} alt={"imgLeft"} />
    </div>
    <div class="flex flex-col flex-1 max-w-md justify-center gap-4 px-1">
      <h1
        class="text-title text-center text-2xl md:text-3xl lg:text-5xl lg:text-[44px] text-secondary-500"
      >
        {title}
      </h1>
      <p
        class="hidden sm:flex w-full text-center text-base lg:text-xl font-light mt-4"
      >
        {subTitle}
      </p>
    </div>
    <div class="w-1/4">
      <Image src={imgRight} alt={"imgRight"} />
    </div>

    <p class="sm:hidden w-full text-center text-base font-light mt-4">
      {subTitle}
    </p>
  </div>
</section>


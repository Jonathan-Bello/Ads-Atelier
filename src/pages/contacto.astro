---
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";

import imgBanner from "@/assets/img/contacto/bannerImg.webp";
import LinkContact from "@/components/links/LinkContact.astro";
import SectionInstagram from "@/components/pages/home/SectionInstagram.astro";
import { RiArrowRightLine } from "@remixicon/react";
---

<Layout title="Contacto">
  <section
    class="bg-secondary-300 w-full pb-8
    flex flex-col justify-center lg:flex-row lg:justify-start lg:items-center lg:gap-12 xl:gap-20"
  >
    <Image
      class={"w-full lg:w-2/4 xl:w-[670px]"}
      src={imgBanner}
      alt={"contacto"}
    />

    <div class="px-4 py-5 lg:max-w-3xl">
      <h1
        class="text-title text-white text-4xl lg:text-5xl mb-8 lg:mb-20 xl:mb-28"
      >
        Hagamos de tu historia, una pieza de joyería
      </h1>
      <div class="flex flex-col gap-8 mb-8 lg:mb-0 lg:gap-12 xl:gap-16">
        <LinkContact
          classColor="text-white"
          labelText="E-mail"
          text="contacto@adsatelier.mx"
          url="mailto:contacto@adsatelier.mx"
        />
        <LinkContact
          classColor="text-white"
          labelText="WhatsApp"
          text="+52 55 4099 6380"
          url="https://api.whatsapp.com/send?phone=5215540996380"
        />
        <LinkContact
          classColor="text-white"
          labelText="Instagram"
          text="@ads.atelier"
          url="https://www.instagram.com/ads.atelier/"
        />
      </div>
    </div>
  </section>

  <section class="bg-primary-100 w-full flex justify-center pt-8 lg:pt-16">
    <div class="container px-4 flex justify-between items-end">
      <h2
        class="text-title text-3xl lg:text-5xl lg:leading-[3.7rem] text-secondary-500"
      >
        Síguenos en Instagram
      </h2>

      <a
        href="https://www.instagram.com/ads.atelier/"
        class="hidden lg:flex font-title text-lg font-medium text-secondary-500 gap-2 items-center"
      >
        Ir a Instagram <RiArrowRightLine />
      </a>
    </div>
  </section>
  <SectionInstagram />
</Layout>

